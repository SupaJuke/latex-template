\newcommand{\handout}[5]{
  \begin{center}
    \noindent\framebox{
      \begin{minipage}{\dimexpr\linewidth-5\fboxrule-5\fboxsep\relax}
        \vspace{0.1em}
        \hbox to \linewidth {\textbf{#1} \hfill Date: #2}
        \vspace{1em}
        \hbox to \linewidth {\hfill \LARGE #5 \hfill}
        \vspace{1em}
        \hbox to \linewidth {\emph{#3} \hfill #4}
        \vspace{0.1em}
      \end{minipage}
    }
  \end{center}
}

